{
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "target": "ES2022",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["ES2022", "DOM"],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@api/*": ["apps/api/src/*"],
      "@frontend/*": ["apps/frontend/src/*"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
